#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    char arr[n];
    string str;
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }


    for(int i=0;i<n;)
    {
       int cnt=0;

       if(i==0)
       {

           str += arr[0];
       }else
       {
           int cnt=0;
             for(int j=i;j<n;j++)
            {
            if(arr[i]==arr[j])
            {
                cnt = cnt+1;
            }else
            {
                break;
            }
        }
        str +=arr[i];
        i = i+cnt;
       }



    }

    cout<<str<<endl;
}
